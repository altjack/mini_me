{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "daily-report",
  "framework": "vite",
  
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run vercel-build",
  
  "rewrites": [
    { "source": "/api/auth/login", "destination": "/api/auth/login.py" },
    { "source": "/api/auth/logout", "destination": "/api/auth/logout.py" },
    { "source": "/api/health", "destination": "/api/health.py" },
    { "source": "/api/stats", "destination": "/api/stats.py" },
    { "source": "/api/draft", "destination": "/api/draft.py" },
    { "source": "/api/generate", "destination": "/api/generate.py" },
    { "source": "/api/approve", "destination": "/api/approve.py" },
    { "source": "/api/reject", "destination": "/api/reject.py" },
    { "source": "/api/backfill", "destination": "/api/backfill.py" },
    { "source": "/api/metrics/range", "destination": "/api/metrics/range.py" },
    { "source": "/api/sessions/range", "destination": "/api/sessions/range.py" }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.vercel.app; font-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests;"
        }
      ]
    }
  ]
}
