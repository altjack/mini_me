{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "daily-report",
  "framework": "vite",
  
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health.py" },
    { "source": "/api/stats", "destination": "/api/stats.py" },
    { "source": "/api/draft", "destination": "/api/draft.py" },
    { "source": "/api/generate", "destination": "/api/generate.py" },
    { "source": "/api/approve", "destination": "/api/approve.py" },
    { "source": "/api/reject", "destination": "/api/reject.py" },
    { "source": "/api/backfill", "destination": "/api/backfill.py" },
    { "source": "/api/metrics/range", "destination": "/api/metrics/range.py" },
    { "source": "/api/sessions/range", "destination": "/api/sessions/range.py" }
  ],
  
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-API-Key" }
      ]
    }
  ]
}
